<% @patrons.to_a.each() do |patron| %>
<h1>Update the <%= patron.name() %> patron </h1>
<% end %>

<form action="/patrons/<%= @patron_id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Add a new name for this patron:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update Patron</button>
</form>
